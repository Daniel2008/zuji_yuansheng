<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".DataManagementActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="数据管理"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- 数据管理选项卡片 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="数据操作"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/button_export"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="导出足迹数据"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/button_import"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="导入足迹数据"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/button_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="搜索足迹"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/button_backup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="备份与恢复" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 数据统计信息卡片 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="数据统计"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/text_view_data_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="数据统计信息将在这里显示"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_view_storage_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="存储信息将在这里显示"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 提示信息 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="提示：导出的数据可以用于备份或在其他设备上恢复"
        android:textSize="14sp"
        android:textStyle="italic"
        android:gravity="center" />

</LinearLayout>